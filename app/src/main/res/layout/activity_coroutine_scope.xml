<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_coroutine_scope_first"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="协程1号线程"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_coroutine_scope_second"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="协程2号线程"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_coroutine_scope_first" />

    <Button
        android:id="@+id/btn_start_coroutine_scope"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="开启协程"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_coroutine_scope"/>

    <Button
        android:id="@+id/btn_cancel_coroutine_scope"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="取消协程"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@+id/btn_start_coroutine_scope"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start_coroutine_scope"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_start_coroutine_scope"/>

</androidx.constraintlayout.widget.ConstraintLayout>