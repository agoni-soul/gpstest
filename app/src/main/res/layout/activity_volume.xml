<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="播放音乐"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/sb_music_progress"
            style="@style/style_volume_adjust_thum"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="16dp"
            android:splitTrack="false"
            android:thumb="@drawable/drawable_shape_circle_6"
            app:layout_constraintEnd_toStartOf="@+id/tv_amount_time"
            app:layout_constraintStart_toEndOf="@+id/tv_leaving_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_player" />

        <TextView
            android:id="@+id/tv_leaving_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/sb_music_progress"
            app:layout_constraintEnd_toStartOf="@+id/sb_music_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sb_music_progress"
            tools:text="03:20" />

        <TextView
            android:id="@+id/tv_amount_time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/sb_music_progress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sb_music_progress"
            app:layout_constraintTop_toTopOf="@+id/sb_music_progress"
            tools:text="04:20" />

        <ImageView
            android:id="@+id/iv_volume_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_selector_bg_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sb_music_progress" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_volume_play" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>