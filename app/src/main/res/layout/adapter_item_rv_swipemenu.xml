<?xml version="1.0" encoding="utf-8"?>
<com.soul.easyswipemenulayout.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/es_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    app:contentView="@+id/content"
    app:rightMenuView="@+id/ll_right">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:gravity="center"
        android:padding="20dp"
        android:text="内容区域" />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:text="删除" />

        <TextView
            android:id="@+id/right_menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:text="收藏" />

    </LinearLayout>
</com.soul.easyswipemenulayout.EasySwipeMenuLayout>